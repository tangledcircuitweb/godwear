{
  "name": "godwear",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode client && vite build --outDir dist-server && cp dist-server/_worker.js dist/ && rm -rf dist-server",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.5",
    "hono": "^4.8.4",
    "honox": "^0.1.43"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.2.3",
    "@cloudflare/workers-types": "^4.20240311.0",
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3",
    "vite": "^6.3.5",
    "wrangler": "^4.17.0"
  }
}
