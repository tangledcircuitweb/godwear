{
  "name": "godwear",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run type-check && vite build --mode client && vite build --outDir dist-server && cp dist-server/_worker.js dist/ && rm -rf dist-server",
    "build:check": "npm run lint:check && npm run format:check && npm run build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "lint": "biome lint --write .",
    "lint:check": "biome lint .",
    "lint:fix": "biome lint --write --unsafe .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:write": "biome check --write .",
    "check:unsafe": "biome check --write --unsafe .",
    "ci": "biome ci .",
    "type-check": "tsc --noEmit",
    "test": "npm run type-check && npm run check && vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:unit": "vitest run --dir src/test/unit --dir tests/unit",
    "test:integration": "vitest run --dir src/test/integration --dir tests/integration",
    "test:contracts": "vitest run --dir src/test/contracts",
    "test:performance": "vitest run --dir src/test/performance",
    "test:services": "vitest run app/services/**/*.test.ts app/lib/**/*.test.ts",
    "test:routes": "vitest run app/routes/**/*.test.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --coverage --ui",
    "test:watch": "vitest watch",
    "cleanup-tests": "node scripts/cleanup-test-resources.js",
    "test:ci": "vitest run --reporter=junit --reporter=default --coverage",
    "test:debug": "vitest --inspect-brk --no-coverage",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:contracts && npm run test:e2e",
    "test:quick": "vitest run --changed",
    "test:live": "vitest --config vitest.live.config.ts",
    "test:live:run": "vitest run --config vitest.live.config.ts",
    "test:live:kv": "vitest run --config vitest.live.config.ts app/services/auth/auth-service.test.ts",
    "playwright:install": "npx playwright install --with-deps"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.0.2",
    "@hono/zod-validator": "^0.7.2",
    "@sendgrid/mail": "^8.1.5",
    "dotenv": "^17.2.0",
    "hono": "^4.8.4",
    "honox": "^0.1.43",
    "undici": "^7.12.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@cloudflare/vite-plugin": "^1.2.3",
    "@cloudflare/vitest-pool-workers": "^0.8.53",
    "@cloudflare/workers-types": "^4.20240311.0",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^3.2.4",
    "miniflare": "^4.20250709.0",
    "msw": "^2.10.4",
    "playwright": "^1.54.1",
    "supertest": "^7.1.3",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4",
    "vitest-environment-miniflare": "^2.12.0",
    "wrangler": "^4.17.0"
  }
}
