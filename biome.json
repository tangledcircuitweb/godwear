{
  "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
  "files": {
    "ignoreUnknown": true,
    "includes": ["app/lib/zod-utils.ts"],
    "experimentalScannerIgnores": [
      "node_modules",
      "dist",
      ".wrangler",
      ".cloudflare",
      "app/lib/mailersend.d.ts",
      "app/lib/zod-utils.d.ts",
      "app/lib/zod-utils.test.ts",
      "app/entry.server.d.ts",
      "app/entry.server.js",
      "app/entry.server.ts",
      "app/durable-objects"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useNamingConvention": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  }
}
